<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#A09898" android:backgroundTint="#3F51B5"
        android:clickable="true">
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/usernameEditText"
            android:background="@drawable/rounded_text"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Username" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/passwordEditText"
            android:background="@drawable/rounded_text"             app:layout_constraintStart_toStartOf="@+id/emailEditText"
            app:layout_constraintEnd_toEndOf="@+id/emailEditText" app:layout_constraintHorizontal_bias="1.0"
            android:hint="Password" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailEditText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/emailEditText" app:layout_constraintEnd_toEndOf="@+id/usernameEditText"
            app:layout_constraintStart_toStartOf="@+id/usernameEditText"
            android:background="@drawable/rounded_text"
            android:hint="Email "
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameEditText"/>
    <Button
            android:text="Register"
            android:layout_width="244dp"
            android:layout_height="40dp"
            android:id="@+id/registerButton" app:layout_constraintStart_toStartOf="@+id/passwordEditText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
            android:background="@drawable/rounded_buttons"
            android:textStyle="bold"
            android:textColor="#3F51B5"
    />
    <TextView
            android:text="Already have an account?"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:textColor="@android:color/white"
            android:id="@+id/existingAccountTextView" app:layout_constraintStart_toStartOf="@+id/passwordEditText"
            app:layout_constraintEnd_toEndOf="@+id/passwordEditText"
            app:layout_constraintTop_toBottomOf="@+id/registerButton"/>
</android.support.constraint.ConstraintLayout>